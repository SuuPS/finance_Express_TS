    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node", "express"],
    "strict": true,
    "module": "commonjs",
    "target": "es2020",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
